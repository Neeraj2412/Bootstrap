$(document).ready(function(){
  $(".btn-workload").click(function(){
    $(".btn-workload").removeClass("active-btn");
    $(this).addClass("active-btn");
  })
  $(".btn-payment").click(function(){
    $(".btn-payment").removeClass("active-btn");
    $(this).addClass("active-btn");
  })
  $(".btn-os").click(function(){
    $(".btn-os").removeClass("active-btn");
    $(this).addClass("active-btn");
  })

});
